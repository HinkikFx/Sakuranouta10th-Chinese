},
block_00044={
{"text"},
text={
vo={
{"vo",file="man_kid_000583",ch="kid"},
},
ja={
{
name={"健一郎"},
"「気がついていたのか？」",
{"rt2"},
},
},
},
linkback="block_00043",
linknext="block_00045",
},
block_00045={
{"text"},
text={
ja={
{
name={"直哉"},
