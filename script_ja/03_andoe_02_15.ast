block_00107={
{"fg",ch="明石",size="z1",mode=3,path=":fg/aka/z1/",file="aka_z1b0000",face="b0003",head="aka_z1b",lv=4,id=9},
{"text"},
text={
vo={
{"vo",file="man_wtd_000752",ch="wtd"},
},
ja={
{
name={"明石"},
