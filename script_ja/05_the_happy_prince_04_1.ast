text={
ja={
{
name={"直哉"},
"「では作業をはじめるか……」",
{"rt2"},
},
},
},
linkback="block_00141",
linknext="block_00143",
},
block_00143={
{"text"},
text={
vo={
{"vo",file="fem_knd_000491",ch="knd"},
},
ja={
{
name={"香奈"},
"「……」",
{"rt2"},
},
},
},
linkback="block_00142",
linknext="block_00144",
},
block_00144={
{"text"},
text={
ja={
{
"作業を開始する。",
{"rt2"},
},
},
},
